<!-- TODO Simplify launch files with a turtlebot_common file -->
<launch>
    <arg name="gui" default="false"/>
    <arg name="sensor_record" default="true"/>
    <arg name="sim_time" default="60"/>
    <arg name="debug" default="false"/>
    <arg name="noisy" default="false"/>
    <arg name="save_file_prefix" default="/home/matt/thesis/experiment_data/five_mobile_restricted_noisy_$(arg noisy)/"/>

    <param name="number_of_robots" type="int" value="5"/>
    <param name="save_file_prefix" type="string" value="$(arg save_file_prefix)"/>
    <param name="sim_time" type="double" value="$(arg sim_time)"/>
    <param name="x_upper" type="double" value="2"/>
    <param name="x_lower" type="double" value="-2"/>
    <param name="y_upper" type="double" value="2"/>
    <param name="y_lower" type="double" value="-2"/>
    <param name="debug" type="bool" value="$(arg debug)"/>
    <param name="noisy" type="bool" value="$(arg noisy)"/>

    <include file="$(find cwru_turtlebot)/launch/gazebo/world_common.launch.xml">
        <arg name="debug" value="$(arg debug)"/>
        <arg name="gui" value="$(arg gui)"/>
    </include>

    <group ns="turtlebot1">
        <include file="$(find cwru_turtlebot)/launch/robots/turtlebot_2d.launch.xml">
            <arg name="model_name" value="turtlebot1"/>
            <arg name="x_pos" value="0"/>
            <arg name="y_pos" value="0"/>
            <arg name="sensor_record" value="$(arg sensor_record)"/>
        </include>
    </group>

    <group ns="turtlebot2">
        <include file="$(find cwru_turtlebot)/launch/robots/turtlebot_2d.launch.xml">
            <arg name="model_name" value="turtlebot2"/>
            <arg name="x_pos" value="0"/>
            <arg name="y_pos" value="2"/>
            <arg name="sensor_record" value="$(arg sensor_record)"/>
        </include>
    </group>

    <group ns="turtlebot3">
        <include file="$(find cwru_turtlebot)/launch/robots/turtlebot_2d.launch.xml">
            <arg name="model_name" value="turtlebot3"/>
            <arg name="x_pos" value="0"/>
            <arg name="y_pos" value="-2"/>
            <arg name="sensor_record" value="$(arg sensor_record)"/>
        </include>
    </group>

    <group ns="turtlebot4">
        <include file="$(find cwru_turtlebot)/launch/robots/turtlebot_2d.launch.xml">
            <arg name="model_name" value="turtlebot4"/>
            <arg name="x_pos" value="2"/>
            <arg name="y_pos" value="0"/>
            <arg name="sensor_record" value="$(arg sensor_record)"/>
        </include>
    </group>

    <group ns="turtlebot5">
        <include file="$(find cwru_turtlebot)/launch/robots/turtlebot_2d.launch.xml">
            <arg name="model_name" value="turtlebot5"/>
            <arg name="x_pos" value="-2"/>
            <arg name="y_pos" value="0"/>
            <arg name="sensor_record" value="$(arg sensor_record)"/>
        </include>
    </group>
</launch>
